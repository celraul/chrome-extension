{
    "name": "Legendas",
    "version": "1.1.0",
    "description": "Capturar legendas geradas automaticas do youtube",
    "author": "celraul",
    "permissions": [
        "declarativeContent",
        "activeTab",
        "notifications",
        "storage",
        "https://www.youtube.com/*"
    ],
    "options_page": "app/options/options.html",
    "background": {
        "scripts": [
            "/assets/jQuery/jquery.min.js",
            "/assets/boostrap/bootstrap.min.js",
            
            "/app/services/storage.service.js",
            "/app/main.js",
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Title",
        "default_icon": "assets/icons/icon.png",
        "default_popup": "app/popup/popup.html"
    },
    "icons": {
        "16": "assets/icons/favicon.png"
    },
    "commands": {
        "save-phrase": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Copy phrases"
        }
    },
    "manifest_version": 2
}