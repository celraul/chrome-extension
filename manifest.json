{
    "name": "Legendas",
    "version": "1.0",
    "description": "Capturar legendas geradas automaticas do youtube",
    "author": "celraul",
    "permissions": [
        "declarativeContent",
        "activeTab",
        "notifications",
        "storage",
        "file://*/*",
        "https://*/*",
        "http://*/*"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": [
            "/js/jquery.min.js",
            "/js/bootstrap.min.js",
            "/js/main.js",
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Title",
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/favicon.png"
    },
    "commands": {
        "save-phrase": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Copy phrases"
        }
    },
    "manifest_version": 2
}